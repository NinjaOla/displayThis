	@await RenderSectionAsync("styles", required: false)
	<script src="https://kit.fontawesome.com/a4758f9f21.js" crossorigin="anonymous"></script>
	<script>
		function openNav() {
			document.getElementById("mySidepanel").style.display = "unset"; 
			}
							
			function closeNav() {
			document.getElementById("mySidepanel").style.display = "none"; 
			}
	</script>
</head>
<body>


