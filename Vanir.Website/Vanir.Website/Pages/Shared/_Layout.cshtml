				<li><a href="https://facebook.vanir.gg" target="_blank"><i class="fa-brands fa-facebook-f"></i></a></li>
				<li><a href="https://linkedin.vanir.gg" target="_blank"><i class="fa-brands fa-linkedin-in"></i></a></li>
				<li><a href="https://instagram.vanir.gg" target="_blank"><i class="fa-brands fa-instagram"></i></a></li>
				<li><a href="https://tiktok.vanir.gg" target="_blank"><i class="fa-brands fa-tiktok"></i></a></li>
			</ul>
			</nav>

		</nav>
		<div class="tab" id="Tab">
			<button class="openbtn" onclick="openNav()"><i class="fa-solid fa-bars"></i></button>
		</div>
		<div class="headercenter"><a asp-page="Index"><img src="~/images/VANIR_Logo_Gold_RGB.svg" alt="Vanir-Logo" class="mobilelogo"></a></div>

	</div>
	<div class="headerdiv">
		<div class="leftflex"><a asp-page="Index"><img src="~/images/VANIR_Logo_Gold_RGB.svg" alt="Vanir-Logo" class="headerlogo"></a></div>
		<nav class="rightflex">
		<ul>	
			@*<li><span class="navtext"><a asp-page="Index">HOME</a></span></li>*@
			<li><span class="navtext"><a asp-page="ExtShop">SHOP</a></span></li>
			<li><span class="navtext"><a asp-page="ArticleList">ARTICLES</a></span></li>
			<li><span class="navtext"><a asp-page="TeamsList">TEAMS</a></span></li>
			<li><span class="navtext"><a asp-page="Index" asp-fragment="Partnerships">PARTNERSHIPS</a></span></li>
			<li><span class="navtext"><a asp-page="Index" asp-fragment="Vision">ABOUT</a></span></li>
		</ul>
  	</nav>
	</div>
</header>
<main>
@RenderBody()
</main>
